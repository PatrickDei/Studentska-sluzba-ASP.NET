@model StudentskaSluzba.Model.Class

<form asp-action="Create" method="post">
    <div class="form-group">
        <label class="control-label">Naziv</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Smjer</label>
        <select asp-for="CourseId" asp-items="ViewBag.PossibleCourses" class="form-control"></select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-outline-success" />
    </div>
</form>