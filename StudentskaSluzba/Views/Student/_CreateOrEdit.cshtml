@using StudentskaSluzba.Model
@model Student

<div class="form-group">
    <label class="control-label">JMBAG</label>
    <input asp-for="JMBAG" class="form-control" />
    <span asp-validation-for="JMBAG" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Ime</label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Prezime</label>
    <input asp-for="LastName" class="form-control">
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Datum rođenja</label>
    <div class="input-group date" data-provide="datepicker" data-date-format="@System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="DateOfBirth" type="text" class="form-control" />
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Datum upisa</label>
    <div class="input-group date" data-provide="datepicker" data-date-format="@System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="DateOfEnrollment" type="text" class="form-control" />
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
    <span asp-validation-for="DateOfEnrollment" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Smjer</label>
    <select asp-for="CourseID" asp-items="ViewBag.PossibleCourses" class="form-control"></select>
    <span asp-validation-for="CourseID" class="text-danger"></span>
</div>

<div class="form-group">
    <input type="submit" value="Odabir predmeta" class="btn btn-outline-success" />
</div>